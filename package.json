{
  "name": "easy-blob",
  "version": "1.0.0",
  "description": "Quick and easy local blob storage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "echo 'This is a library package. See README for usage examples.'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint:md": "markdownlint *.md",
    "lint:md:fix": "markdownlint --fix *.md",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "npm run lint:md && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesselpalmer/easy-blob"
  },
  "keywords": [
    "blob",
    "storage",
    "file-upload",
    "file-storage",
    "local-storage",
    "express",
    "typescript",
    "sqlite",
    "multer"
  ],
  "author": "Jesse Palmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesselpalmer/easy-blob/issues"
  },
  "homepage": "https://github.com/jesselpalmer/easy-blob#readme",
  "dependencies": {
    "express": "^5.1.0",
    "multer": "^2.0.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
